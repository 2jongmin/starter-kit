{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "inlineSourceMap": false,
    "types": [
      "react",
      "react-dom",
      "react-redux",
      "redux",
      "react-css-modules",
      "mocha",
      "chai",
      "node"
    ],
    "baseUrl": "src",
    "paths": {
      "components/*": ["./components/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
